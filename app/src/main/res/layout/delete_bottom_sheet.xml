<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/deleteBottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp">

    <View
        android:layout_width="100dp"
        android:layout_height="6dp"
        android:layout_margin="6dp"
        android:background="@drawable/horizontal_bar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/ptsans_bold"
        android:text="@string/sure_you_want_ro_delete_note_or_not"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/delete_no"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/del_no"
        android:fontFamily="@font/ptsans_regular"
        android:gravity="center"
        android:text="No" />

    <TextView
        android:id="@+id/delete_yes"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/del_yes"
        android:fontFamily="@font/ptsans_regular"
        android:gravity="center"
        android:text="Yes" />
</LinearLayout>