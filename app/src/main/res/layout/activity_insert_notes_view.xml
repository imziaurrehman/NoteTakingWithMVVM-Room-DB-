<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".InsertNotesView">

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ed_style"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ptsans_regular"
        android:hint="title.."
        android:paddingStart="12dp" />

    <EditText
        android:id="@+id/edSubTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/ed_style"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ptsans_regular"
        android:hint="subtitle.."
        android:paddingEnd="12dp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/ptsans_bold"
            android:gravity="center_vertical"
            android:text="Priority"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/greenPriority"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/green_dot"
            android:padding="2dp"
            android:src="@drawable/ic_baseline_done_24" />

        <ImageView
            android:id="@+id/yellowPriority"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/yellow_dot"
            android:padding="2dp" />

        <ImageView
            android:id="@+id/redPriority"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/red_dot"
            android:padding="2dp" />
    </LinearLayout>

    <EditText
        android:id="@+id/edNotes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/ed_style"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/ptsans_regular"
        android:gravity="top"
        android:hint="notes.."
        android:paddingStart="15dp"
        android:paddingTop="20dp"
        android:paddingEnd="15dp" />

    <Button
        android:id="@+id/saveNoteBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="@color/red"
        android:padding="20dp"
        android:text="Save Note.."
        android:textColor="@color/black" />
</LinearLayout>